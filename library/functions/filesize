#!/usr/bin/bash
#
getSizeOfUrl()
{
    local filename
    local filesize
    
    filename=${1}
    filesize="$(setSizeOfUrl ${filename})"

    echo ${filesize}
}

setSizeOfUrl()
{
    echo "$(curl -sLI ${1} | wc -c)"
}

readSize()
{
    while read B dummy;
    do
        [ $B -lt 1024 ] && echo ${B} B && break
            KB=$(((B+512)/1024))
        [ $KB -lt 1024 ] && echo ${KB} KB && break
            MB=$(((KB+512)/1024))
        [ $MB -lt 1024 ] && echo ${MB} MB && break
            GB=$(((MB+512)/1024))
        [ $GB -lt 1024 ] && echo ${GB} GB && break
            echo $(((GB+512)/1024)) TG
    done
}
